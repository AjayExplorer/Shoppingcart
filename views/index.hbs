<!DOCTYPE html>
<html>
<head>
  <title>{{title}}</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <div class="wrapper">
    <header>
      <h1>{{title}}</h1>
      <p class="tagline">Your favorite items in one place</p>
    </header>

    <section class="products">
      {{#each products}}
        <div class="product">
          <h2>{{this.name}}</h2>
          <p class="price">â‚¹{{this.price}}</p>
          <form action="/add-to-cart" method="POST">
            <input type="hidden" name="productId" value="{{this.id}}">
            <button type="submit">Add to Cart</button>
          </form>
        </div>
      {{/each}}
    </section>

    <section class="cart-box">
      <h2>ðŸ›’ Your Cart</h2>
      {{#if cart.length}}
        <ul class="cart-list">
          {{#each cart}}
            <li>
              {{this.name}} â€” â‚¹{{this.price}}
              <form action="/remove-from-cart" method="POST" style="display:inline;">
                <input type="hidden" name="productId" value="{{this.id}}">
                <button class="remove-btn">Remove</button>
              </form>
            </li>
          {{/each}}
        </ul>
        <div class="cart-total">Total: â‚¹{{total}}</div>
      {{else}}
        <p class="cart-empty">Cart is currently empty.</p>
      {{/if}}
    </section>
  </div>
</body>
</html>
